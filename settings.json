{
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8",
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "modifications",
        },
    "autopep8.args": [
        "--max-line-length=120",
        "--ignore=E201,E202,E211,E221,E222,E266,E401",
        // PEP8 Error Codes: https://pycodestyle.pycqa.org/en/latest/intro.html#error-codes
        /*
        E201: whitespace after  (
        E202: whitespace before )
        E211: whitespace before (
        E221: multiple spaces before operator
        E222: multiple spaces after  operator
        E266: too many leading # for block comment
        E401: multiple imports on one line
        */
    ],
    "breadcrumbs.enabled": false, //true,
    "editor.bracketPairColorization.enabled": false, //true,
    "editor.copyWithSyntaxHighlighting": true,
    "editor.fontSize": 14,
    "editor.guides.indentation": true, //false,
    "editor.inlineSuggest.enabled": true,
    "editor.lineHeight": 24,
    "editor.matchBrackets": "always",
    "editor.suggest.preview": true,
    "editor.tabCompletion": "on",
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "security.workspace.trust.untrustedFiles": "open",
    "terminal.integrated.cwd": "${fileDirname}",
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.fontWeight": "normal",
    "terminal.integrated.scrollback": 10000,
    "window.commandCenter": false,
    "window.density.editorTabHeight": "compact",
    "window.zoomLevel": 1,
    "workbench.activityBar.location": "top",
    "workbench.layoutControl.enabled": false,
    "workbench.layoutControl.type": "menu"
}
